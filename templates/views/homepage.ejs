<!DOCTYPE html>
<html>
<head>
    <title>Homepage</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
</head>
<body>

<!-- Navigation Bar -->
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="#">Home</a>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="#">Create Event</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Create Post</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#">Profile</a>
            </li>
        </ul>
    </div>
</nav>

<div class="container my-5">
    <div class="card">
        <div class="card-header">
            <ul class="nav nav-tabs card-header-tabs">
                <li class="nav-item">
                    <a class="nav-link active" href="#fireteam" data-toggle="tab" id="fireTab">Fireteam</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#scouting" data-toggle="tab" id="scoutTab">Scouting</a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            <!-- Filter Selector -->
            <div class="form-group">
                <label for="type">Type Filter:</label>
                <select class="form-control" id="type" name="type">
                    <option value="post">Posts</option>
                    <option value="event">Events</option>
                    <option value="all">Both</option>
                </select>
            </div>
            <!-- Searchable Multi-Select Field -->
            <div class="form-group">
                <label for="tags">Tags:</label>
                <select class="form-control" multiple="multiple" id="tags">
                    <% if (typeFilter.value === "all"){
                        for(var i=0; i<tags.length; i++) { %>
                            <option value="<%= tags[i] %>"><%= tags[i] %></option>
                        <% } %>
                    <% } %>
                    <% if (typeFilter.value === "post"){
                        for(var i=0; i<tags.length; i++) {
                        if (tags[i].type === "post"){  %>
                            <option value="<%= tags[i] %>"><%= tags[i] %></option>
                        <% } %>
                        <% } %>
                    <% } %>
                        <% if (typeFilter.value === "event"){
                        for(var i=0; i<tags.length; i++) {
                        if (tags[i].type === "event"){  %>
                            <option value="<%= tags[i] %>"><%= tags[i] %></option>
                        <% } %>
                        <% } %>
                        <% } %>
                </select>
            </div>
            <!-- Post and Event Feed -->
            <div class="tab-content">
                <div class="tab-pane fade show active" id="fireteamCards" >

                </div>
                <div class="tab-pane fade contentCards" id="scoutingCards">

                </div>
            </div>

            <!-- Pagination -->
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                    </li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="/assets/js/homepage.js"></script>
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</body>
</html>