<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <link rel="stylesheet" type="text/css" href="/assets/css/styles.css">
    <title>Profile</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Henny+Penny&family=IBM+Plex+Serif&family=Inter&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/915ab9eecb.js" crossorigin="anonymous"></script>
</head>

<body>
<%- include('../partials/header')%>
<!--Profile information-->
<div class="container text-center">
    <div class="row align-items-start">
        <div class="col-6 col-sm-3">
            <div class="card" style="width: 15rem;">
                <a href="<%=owner.avatar%>"></a>
                <br>
                <div class="card-body" id="edit">
                    <h6 class="card-title"><%=owner.info.displayName%></h6>
                    <h2 class="card-title"><%=owner.info.name.first + " " + owner.info.name.last%></h2>
                    <hr><br>
                    <p class="card-text">
                        Location:<%=owner.info.location.text%><br>
                        Branch of Service:<%=owner.info.service.branch%><br>
                        Status:<%=owner.info.service.status%><br>
                        Current Job:<%=owner.info.service.currentJob%>
                    </p>
                    <br>
                    <button type="submit" id="edit-button">Edit Profile</button>
                    <button type="submit" id="end-editing">Save Profile</button>

                </div>
            </div>
        </div>
    <!--Recent post-->
        <div class="col-6 col-sm-3"">
            <h3>Recent Post</h3>
            <% posts.forEach(function (post){%>
            <div class="card" style="width: 15rem;">
                <div class="card-body">
                    <h5 class="card-title post-title"><%=post.title%></h5>
                    <p class="card-text post-content"><%=post.content%></p>
                    <p class="card-text post-time"><%=post.timeCreated%></p>
                </div>
            </div>
            <%});%>
        </div>
    <!--Fireteam-->
        <div class="col-6 col-sm-3"">
            <h3>Fireteam</h3>
            <div class="card" style="width: 15rem;">
                <div class="card-body">
                    <h6 class="card-title following">Following</h6>

                </div>
            </div>
        </div>
    <!--Interest-->
        <div class="col-6 col-sm-3"">
            <h3>Interests</h3>
            <div class="card" style="width: 15rem;">
                <div class="card-body">
                    <h6 class="card-title interest-tags">Interest tags</h6>
                    <%owner.tags.forEach(function(tag){ %>
                        <li><%= tag %></li> <% }); %>
                </div>
            </div>
        </div>
    </div>
</div>



</body>

<script src="../assets/js/profile.js"></script>
</html>
