<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <link rel="stylesheet" href="/assets/css/styles.css">
    <title>Profile</title>
</head>

<body>
<!--Profile information-->
<div class="grid text-center container" id="edit">
    <div class="g-col-6 g-col-md-4">
        <div class="card" style="width: 18rem;">
            <a href="<%=owner.avatar%>"></a>
            <div class="card-body">
                <h6 class="card-title"><%=owner.info.displayName%></h6>
                <h2 class="card-title"><%=owner.info.name.first + " " + owner.info.name.last%></h2>
                <p class="card-text">
                    Location:<%=owner.info.location.text%>
                    Branch of Service:<%=owner.info.service.branch%>
                    Status:<%=owner.info.service.status%>
                    Current Job:<%=owner.info.service.currentJob%>
                </p>
                <button type="submit" id="edit-button">Edit Profile</button>
                <button type="submit" id="end-editing">Save Profile</button>

            </div>
        </div>
    </div>
<!--Recent post-->
    <div class="g-col-6 g-col-md-4">
        <h3>Recent Post</h3>
        <% posts.forEach(function (post){%>
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title post-title"><%=post.title%></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%=post.owner%></h6>
                <p class="card-text post-content"><%=post.content%></p>
                <p class="card-text post-time"><%=post.timeCreated%></p>
            </div>
        </div>
        <%});%>
    </div>
<!--Fireteam-->
    <div class="g-col-6 g-col-md-4">
        <h3>Fireteam</h3>
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h6 class="card-title following">Following</h6>

            </div>
        </div>
    </div>
<!--Interest-->
    <div class="g-col-6 g-col-md-4">
        <h3>Interests</h3>
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h6 class="card-title interest-tags">Interest tags</h6>
                <%owner.tags.forEach(function(tag){ %>
                    <li><%= tag %></li> <% }); %>
            </div>
        </div>
    </div>
</div>



</body>

<script src="../assets/js/profile.js"></script>
</html>
